{% extends "_layout.twig" %} 
{% set bodyAttributes ={ class: "about-you greenTheme svgStyle" } %} 
{% set docTitle = entry.title %} 
{% set metaDesc = entry.metaDescription %} 
{% set page = craft.entries().section('aboutYou').all() %} 

{% set buttonClass = "green" %}
{% set buttonClassContrast = "green" %}

{# //background color #}
{% set main = "bg-green-light" %}
{# //alternate star color #}
{% set contrast = "bg-green-dark" %}
{% set footer = "bg-green-dark" %}



{% block content %} 
  {% for entry in page %} 

  <div class="centered-hero start bg-green-light">
    <div class="pad-all">
        <div class="text-center max-hero">
            {% if entry.pageTitle %}
                {{entry.pageTitle}}
            {% endif %}
            {% if entry.pageIntro %}
                <div class="intro-text">
                    {{entry.pageIntro}}
                </div>
            {% endif %}

            {% if entry.pageIntroParagraph %}
                {{entry.pageIntroParagraph }}
            {% endif %}
        </div>

        {% embed '_partials/button' %}
            {% block class %}{{ buttonClass }} centered {% endblock %}
            {% block title %}Get Started{% endblock %}
            {% block url %}#getstarted{% endblock %}
        {% endembed %}
    </div>
</div>




 {% macro btnItem(dataFilter, url) %}
  <div class="btn green centered">
    <button data-filter="{{ dataFilter }}" class="button">
    <a href="{{ url }}">
        <p>Continue</p>
        <div>{% include '_partials/svgs/arrow.twig' %}</div> 
    </a>
    </button>
  </div>
{% endmacro %}

<div class="filters">
    <div class="centered-hero bg-green-light ui-group" id="getstarted">
        <div class="pad-all">
            <div class="text-center max-hero">
                {% if entry.heading %}
                    {{entry.heading}}
                {% endif %}
            </div>

            <div class="flex-wrap section-solutions button-group js-radio-button-group" data-filter-group="color">     
                {% for block in entry.questionnaire %}
                    {% if block.type == 'groupFields' %}
                    <div class="third box bg-light"> 
                        <div class="feature-pad">
                            {% if block.heading %}
                               <h3>{{block.heading}}</h3> 
                            {% endif %}
                        </div>

                        <div class="flex-wrap style row flex-jc-sb">
                            <div class="flex-wrap col flex-jc-fe">
                                {% if block.heading %}
                                    {{ _self.btnItem('.' ~ block.heading|replace({' ': '', '/[^a-zA-Z0-9]/': ''})|lower, '#space') }}
                                {% endif %}
                            </div>
                            
                            <div class="align-right">
                                {% if block.image.one() %}
                                    {% set image = block.image.one() %}
                                    <img  src="{{ image.url }}" alt="{{ image.alt }}">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="centered-hero bg-green-light ui-group" id="space">
        <div class="pad-all">
            <div class="text-center max-hero">
                {% if entry.heading2 %}
                    {{entry.heading2}}
                {% endif %}
            </div>

            <div class="flex-wrap section-solutions button-group js-radio-button-group" data-filter-group="size">     
                {% for block in entry.questionnaire2 %}
                    {% if block.type == 'groupFields' %}
                    <div class="third box bg-light"> 
                        <div class="feature-pad">
                            {% if block.heading %}
                               <h3>{{block.heading}}</h3> 
                            {% endif %}
                        </div>

                        <div class="flex-wrap style row flex-jc-sb">
                            <div class="flex-wrap col flex-jc-fe">
                                {% if block.heading %}
                                    {{ _self.btnItem('.' ~ block.heading|replace({' ': '', '/[^a-zA-Z0-9]/': ''})|lower, '#team') }}
                                {% endif %}
                            </div>
                            
                            <div class="align-right">
                                {% if block.image.one() %}
                                    {% set image = block.image.one() %}
                                    <img  src="{{ image.url }}" alt="{{ image.alt }}">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="centered-hero bg-green-light ui-group" id="team">
        <div class="pad-all">
            <div class="text-center max-hero">
                {% if entry.heading3 %}
                    {{entry.heading3}}
                {% endif %}
            </div>

            <div class="flex-wrap section-solutions button-group js-radio-button-group" data-filter-group="shape">     
                    <div class="third box bg-light"> 
                        <div class="feature-pad">
                            <h3>Privacy</h3>
                        </div>
                        <div class="flex-wrap style row flex-jc-sb">
                            <div class="flex-wrap col flex-jc-fe">
                                {{ _self.btnItem('.privacy', '#results') }}
                            </div>
                            <div class="align-right">
                                <img  src="/uploads/images/illustration20-hands.svg" alt="">
                            </div>
                        </div>
                    </div>

                    <div class="third box bg-light"> 
                        <div class="feature-pad">
                            <h3>Collaboration</h3>
                        </div>
                        <div class="flex-wrap  style row flex-jc-sb">
                            <div class="flex-wrap col flex-jc-fe">
                                {{ _self.btnItem('.collaboration', '#results') }}
                            </div>
                            
                            <div class="align-right">
                                <img  src="/uploads/images/illustration20-hands.svg" alt="">
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div> 
</div>


{% macro btnResult(url) %}
  <div class="btn green centered">
    <a href="{{ url }}">
      <p>Continue</p>
      <div>{% include '_partials/svgs/arrow.twig' %}</div> 
    </a>
  </div>
{% endmacro %}

<div class="centered-hero bg-green-light" id="results">
    <div class="pad-top-btm">
        <div class="text-center max-hero">
            <h2>Best option for <i>you</i></h2>

            <div class="grid">
                <div class="grid-sizer"></div>
                <div class="third color-shape fulltime bigTeam privacy collaboration">
                    <div class="flexIt">
                    <h3>Urban<i>Studio</i></h3>
                    <img  src="/uploads/images/UrbanStudio3.svg" alt="">
                   {{ _self.btnResult('urban-studio') }}
                    </div>
                </div>
                
                <div class="third  color-shape fulltime smallTeam privacy collaboration">
                    <h3>Urban<i>Suite</i></h3>
                    <img  src="/uploads/images/UrbanSuite3.svg" alt="">
                   {{ _self.btnResult('urban-suite') }}
                </div>
                 <div class="third color-shape sometimes fulltime single privacy collaboration">
                    <h3>Urban<i>Desk</i></h3>
                    <img  src="/uploads/images/UrbanDesk3.svg" alt="">
                    {{ _self.btnResult('urban-desk') }}
                </div>

                <div class="third color-shape sometimes single collaboration">
                    <h3>Urban<i>Club</i></h3>
                    <img  src="/uploads/images/UrbanClub3.svg" alt="">
                   {{ _self.btnResult('urban-club') }}
                </div>
                <div class="third color-shape sometimes privacy collaboration smallTeam bigTeam">
                    <h3>Urban<i>Meet</i></h3>
                    <img  src="/uploads/images/UrbanMeet3.svg" alt="">
                    {{ _self.btnResult('urban-meet') }}
                </div>
                 <div class="third color-shape fulltime bigTeam privacy">
                    <h3>Urban<i>Lease</i></h3>
                    <img  src="/uploads/images/UrbanLease3.svg" alt="">
                    {{ _self.btnResult('urban-lease') }}
                </div>
            </div>

        </div>
    </div>
</div> 








<div class="star-banner-wrapper pad-top-btm no-btm bg-green-light">
    {% embed '_partials/svgs/star-banner.twig' %}
        {% block contrastStar %} {{contrast}} {% endblock %}
        {% block contrastStar2 %} {{contrast}} {% endblock %}
        {% block contrastStar3 %} {{contrast}} {% endblock %}
    {% endembed %}
</div>

  {% endfor %} 
{% endblock %}


{% block scripts %}
{{ parent() }}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://npmcdn.com/isotope-layout@3.0.6/dist/isotope.pkgd.js"></script>
<script  type="module" src="/assets/js/isotope.js"></script>
{% endblock %}



