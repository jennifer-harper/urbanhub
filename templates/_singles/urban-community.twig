   
{% extends "_layout.twig" %} 
{% set bodyAttributes ={ class: "urbanCommunity lightYellowTheme svgStyle" } %} 
{% set docTitle = entry.title %} 
{% set metaDesc = entry.metaDescription %} 
{% set page = craft.entries().section('urbanCommunity').all() %} 


{% set buttonClass = "orange" %}
{% set buttonClassContrast = "orange" %}

{% set main = "bg-yellow-light" %}
{% set contrast = "bg-orange" %}
{% set footer = "bg-yellow-light" %}


{% block content %} 
  {% for entry in page %} 
    {% embed '_partials/hero/centered-hero.twig' %}
     {% block class %} border-btm border-color-other {% endblock %}
    {% endembed %}
    {% embed '_partials/sections/solutions-contrast.twig' %}
        {% block headingAlign %} align-left max-title {% endblock %}
        {% block colCount %} third {% endblock %}
    {% endembed %}

    {% embed '_partials/sections/star-banner-section.twig' %}
        {% block class %} bg-light {% endblock %}
    {% endembed %}


    {% embed '_partials/sections/btn-icon-section.twig' %}
        {% block class %} {{main}} border-btm border-color{% endblock %}
    {% endembed %}

    {% embed '_partials/sections/centered-section.twig' %}
        {% block class %} {{main}}{% endblock %}
    {% endembed %}

    {% embed '_partials/sections/solutions-mask.twig' %}
{% endembed %}

   {% embed '_partials/footer/social-media.twig' %}
           {% block class %} border-top{% endblock %}
    {% endembed %}
    {% include '_partials/footer/contact-section.twig' %}

  {% endfor %} 
{% endblock %}

{% block scripts %}
{{ parent() }}
    <script>
        $('.section-solutions h2').each(function () {
            // Split the content by <br> tags
            var parts = $(this).html().split('<br>')

            // Create spans for each part
            var htmlContent = ''
            for (var i = 0; i < parts.length; i++) {
                htmlContent += '<span>' + parts[i].trim() + '</span> '
            }
            // Update the HTML content of the <p> element
            $(this).html(htmlContent.trim())
        })

    </script>
{% endblock %}