
{% set tabs = craft.entries().section('facilitiesAmenitiesTabs').orderBy('postDate asc').all() %}


<div class="tabs-facilities " id="horizontalTab">
    <ul class="tabs-nav-wrapper">
        {% for tab in tabs %} 
            <li class="">
                <a href="#facilities-{{ tab.slug }}">
                   <div class="mobile-only">
                    {% if  tab.tabTitle %}
                        {{tab.tabTitle}}
                    {% endif %}
                   </div>
                </a>
            </li>
        {% endfor %}
    </ul>

    {% for tab in tabs %}
            <div class="solutions-contrast tabs bg-green-light" id="facilities-{{ tab.slug}}">
                <div class="pad-all no-bottom">
                    <div class="flex-wrap flex-jc-sb flex-align-center ">
                        {{tab.facilitiesHeading}}
                        {% embed '_partials/button.twig' %}
                        {% block class %}no-marg-top {% endblock %}
                        {% endembed %}
                    </div>
                </div> 
                <div class="pad-all">
                    <div class="flex-wrap wrap border-top border-left border-color-contrast">
                        {% for block in tab.facilitiesTabs %}
                            {% if block.type == 'groupFields' %}
                            <div class=" pad-all sm border-btm  border-right border-color-contrast flex-wrap half">
                                <div>
                                    {% if block.heading %}
                                        {{block.heading}}
                                    {% endif %}
                                    <div class="no-btm-marg">
                                    {% if block.paragraph %}
                                        {{block.paragraph}}
                                    {% endif %}
                                    </div>
                                </div>

                                <div class="img-wrap">
                                    {% if block.image.one() %}
                                        {% set image = block.image.one() %}
                                        <img class="" src="{{ image.url }}" alt="{{ image.alt }}">
                                    {% else %}
                                        <img class="" src="uploads/images/illustration4-keys.svg" alt="image icon">
                                    {% endif %}
                                </div>
                            </div>
                            {% endif %}                           
                        {% endfor %}
                    </div>
                </div> 
            </div>
    {% endfor %}

</div>